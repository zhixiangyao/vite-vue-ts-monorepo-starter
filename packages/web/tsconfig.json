{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types/"],
    "types": ["node", "vite/client"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
