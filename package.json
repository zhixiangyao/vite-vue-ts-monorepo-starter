{
  "name": "vite-vue-ts-monorepo-starter",
  "version": "0.1.0",
  "author": "zhixiangyao <blueskyzx@icloud.com> <https://github.com/zhixiangyao>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhixiangyao/vite-vue-ts-monorepo-starter.git"
  },
  "homepage": "https://github.com/zhixiangyao/vite-vue-ts-monorepo-starter",
  "scripts": {
    "lint:all": "npm run lint:eslint && npm run lint:prettier && npm run lint:stylelint",
    "lint:eslint": "eslint \"packages/**/{src,mock}/**/*.{js,vue,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write --loglevel warn \"packages/**/src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --fix \"packages/**/**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "packages/**/*.{js,vue,ts,tsx}": [
      "npx eslint --fix"
    ],
    "packages/**/*.{js,json,tsx,css,less,scss,vue,html,md}": [
      "npx prettier --write --loglevel warn "
    ],
    "packages/**/*.{vue,less,postcss,css,scss}": [
      "npx stylelint --fix --cache --cache-location node_modules/.cache/stylelint/"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-vue": "^8.0.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.2",
    "postcss-html": "^1.2.0",
    "prettier": "^2.4.1",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.0.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0"
  },
  "license": "MIT",
  "engines": {
    "node": "^12 || ^14 || ^15 || ^16 || ^17"
  }
}
